<div class="container-xl">
  <div class="row">
    <div class="col-6">
      <%= render 'form' %>
      <p class="text-muted text-center m-1">Start chatbot interactions by clicking the button with the mic or typing into the chatbox</p>
    </div>
    <div class="col-6">
      <div class="card">
        <div class="ribbon ribbon-top bg-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-help" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
